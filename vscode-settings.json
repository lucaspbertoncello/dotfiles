{
  "workbench.colorCustomizations": {
    "editor.foldBackground": "#00000000"
  },
  "workbench.editor.labelFormat": "short",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.untitled.hint": "hidden",
  "editor.fontSize": 14,
  "editor.lineHeight": 26,
  "editor.tabSize": 2,
  "editor.fontFamily": "Lilex",
  "editor.fontLigatures": true,
  "editor.scrollbar.vertical": "hidden",
  "editor.renderLineHighlight": "gutter",
  "editor.rulers": [110, 130],
  "editor.parameterHints.enabled": false,
  "editor.semanticHighlighting.enabled": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.renderLineHeightlight": "gutter",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.updateImportsOnFileMove.enabled": "never",
  "codesnap.roundedCorners": true,
  "codesnap.showLineNumbers": false,
  "codesnap.containerPadding": "1em",
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "code-runner.executorMap": {
    "typescript": "ts-node"
  },
  "extensions.ignoreRecommendations": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "material-icon-theme.activeIconPack": "nest",
  "material-icon-theme.folders.associations": {
    "domain": "core",
    "infra": "app",
    "main": "public",
    "presentation": "connection",
    "cryptography": "secure",
    "entities": "class",
    "repositories": "mappings",
    "protocols": "resource",
    "useCases": "components",
    "subcomponents": "components",
    "adapters": "connection",
    "factories": "container",
    "globals": "global",
    "ui": "views",
    "features": "components",
    "http": "core",
    "core": "class",
    "dto": "resource",
    "modals": "components",
    "stores": "context",
    "sections": "components",
    "sls": "serverless",
    "middy": "middleware"
  },
  "material-icon-theme.files.associations": {
    "ormconfig.json": "database",
    "tsconfig.json": "tune",
    ".lintstagedrc.json": "tune"
  },
  "symbols.files.associations": {
    "*.module.ts": "none",
    "*.controller.ts": "none",
    "*.service.ts": "none"
  },
  "gitlens.defaultDateFormat": null,
  "gitlens.hovers.currentLine.over": "line",
  "liveServer.settings.donotShowInfoMsg": true,
  "git.confirmSync": false,
  "editor.inlineSuggest.enabled": true,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.formatOnSave": true,
  "symbols.hidesExplorerArrows": true,
  "git.suggestSmartCommit": false,
  "[css]": {
    "editor.suggest.insertMode": "replace"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma",
    "editor.formatOnSave": true
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "phase",
  "less.format.preserveNewLines": false,
  "workbench.editor.empty.hint": "hidden",
  "workbench.iconTheme": "Monokai Pro Icons",
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "chat.editor.lineHeight": 26,
  "chat.editor.wordWrap": "on",
  "claudeCode.selectedModel": "default",
  "chat.editor.fontSize": 13,
  "terminal.integrated.fontLigatures.enabled": true,
  "claudeCode.useTerminal": true,
  "claudeCode.useCtrlEnterToSend": true,
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1.5,
  "claudeCode.preferredLocation": "panel",
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "workbench.colorTheme": "Catppuccin Macchiato",
  "cursor.cpp.disabledLanguages": ["plaintext", "markdown", "scminput"],
  "errorLens.fontStyleItalic": true,
  "window.zoomLevel": 1,
  "editor.linkedEditing": true
}
